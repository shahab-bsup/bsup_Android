<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/follow_up_results_tenth_question"
                layout="@layout/doctor_layout" />
            <tk.medlynk.patient.android.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_symptoms_seventh_question"
                android:layout_centerHorizontal="true"
                android:text="#7"
                android:textSize="25sp"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/worst_case_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_below="@id/follow_up_results_tenth_question">
                <Button
                    android:background="@drawable/worstday_bestday_background"
                    android:elevation="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingStart="30dp"
                    android:text="@string/worst_day"
                    android:textColor="@color/colorPrimary"
                    android:drawableLeft="@drawable/dislike_selected"
                    tools:ignore="RtlSymmetry" />

                <Button
                    android:background="@drawable/worstday_bestday_background"
                    android:elevation="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/like_gray_unselected"
                    android:paddingStart="30dp"
                    android:text="@string/best_day"
                    android:textColor="@color/gray_app"
                    tools:ignore="ButtonStyle"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/choices"
                android:layout_below="@id/worst_case_layout"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/patient_icon"
                    android:id="@+id/doctor_icon"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />

                <com.medlynk.shahab.myviewselection.ViewSelection
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:number_of_views="9"
                    app:selectable="false"
                    app:button_type="true"
                    app:unselectable_background="?selectableItemBackground"
                    app:unselectable_text_color="@color/answer_choices_numbers_color"
                    android:id="@+id/viewSelectionChoiceNumbers" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    />

                <com.medlynk.shahab.myviewselection.ViewSelection
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:number_of_views="9"
                    app:single_select="true"
                    app:selectable="true"
                    app:button_type="true"
                    app:unselected_background="@drawable/answer_not_selected"
                    app:selected_background="@drawable/answer_selected"
                    app:unselected_text_color="@color/white"
                    app:selected_text_color="@color/black"
                    android:id="@+id/viewSelectionChoices" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/choices"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnNextQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/disable_next_question"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:clickable="false"
                    android:text="@string/next"
                    android:textColor="@color/white" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnSkipQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/enabled_custom_button"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:text="@string/skip"
                    android:textColor="@color/white" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        />

</RelativeLayout>
