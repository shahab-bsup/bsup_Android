<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    android:background="@color/white"
    tools:context="tk.medlynk.patient.android.Activity.FollowUpSymptoms.fragments.Question_2.FUpS_2nd_Question">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/follow_up_symptoms_second_question"
                layout="@layout/doctor_layout"></include>

            <tk.medlynk.patient.android.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_symptoms_second_question"
                android:layout_centerHorizontal="true"
                android:text="#2"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/answer_text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_symptoms_second_question"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/paient_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/patient_icon" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/follow_up_symptom_second_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text_doctor_id"
                    android:hint="@string/type_answer_here"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:padding="10dp" />

            </LinearLayout>

            <com.medlynk.shahab.myviewselection.ViewSelection
                android:id="@+id/viewSelectionChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/answer_text_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:button_type="true"
                app:number_of_views="1"
                app:selectable="true"
                app:selected_background="@drawable/answer_selected"
                app:selected_text_color="@color/black"
                app:single_select="true"
                app:unselected_background="@drawable/answer_not_selected"
                app:unselected_text_color="@color/white" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layoutDirection="rtl">

        <Button
            android:id="@+id/btnNextQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/disable_next_question"
            android:clickable="false"
            android:text="@string/next"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSkipQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/enabled_custom_button"
            android:text="@string/skip"
            android:textColor="@color/white" />

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        />

</RelativeLayout>
