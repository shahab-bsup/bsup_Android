<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/follow_up_symptoms_fourteen_question"
                layout="@layout/doctor_layout" />
            <tk.medlynk.patient.android.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_symptoms_fourteen_question"
                android:text="#14"
                android:textSize="25sp"
                />

            <LinearLayout
                android:id="@+id/choices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_symptoms_fourteen_question"
                android:layoutDirection="rtl">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/patient_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:id="@+id/viewSelectionFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:button_type="true"
                        app:number_of_views="3"
                        app:selectable="true"
                        app:selected_background="@drawable/answer_selected"
                        app:selected_text_color="@color/black"
                        app:single_select="false"
                        app:unselected_background="@drawable/answer_not_selected"
                        app:unselected_text_color="@color/white" />

                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:id="@+id/viewSelectionSubFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        app:button_type="true"
                        app:number_of_views="6"
                        app:selectable="true"
                        app:selected_background="@drawable/answer_selected"
                        app:selected_text_color="@color/black"
                        app:single_select="false"
                        app:unselected_background="@drawable/answer_not_selected"
                        app:unselected_text_color="@color/white" />

                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:id="@+id/viewSelectionSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:button_type="true"
                        app:number_of_views="1"
                        app:selectable="true"
                        app:selected_background="@drawable/answer_selected"
                        app:selected_text_color="@color/black"
                        app:single_select="true"
                        app:unselected_background="@drawable/answer_not_selected"
                        app:unselected_text_color="@color/white" />

                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:id="@+id/viewSelectionSubSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        app:button_type="true"
                        app:number_of_views="4"
                        app:selectable="true"
                        app:selected_background="@drawable/answer_selected"
                        app:selected_text_color="@color/black"
                        app:single_select="false"
                        app:unselected_background="@drawable/answer_not_selected"
                        app:unselected_text_color="@color/white" />

                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:id="@+id/viewSelectionThird"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:button_type="true"
                        app:number_of_views="1"
                        app:selectable="true"
                        app:selected_background="@drawable/answer_selected"
                        app:selected_text_color="@color/black"
                        app:single_select="true"
                        app:unselected_background="@drawable/answer_not_selected"
                        app:unselected_text_color="@color/white" />

                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:id="@+id/viewSelectionFourth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:button_type="true"
                        app:number_of_views="1"
                        app:selectable="true"
                        app:selected_background="@drawable/answer_selected"
                        app:selected_text_color="@color/black"
                        app:single_select="true"
                        app:unselected_background="@drawable/answer_not_selected"
                        app:unselected_text_color="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/choices"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnNextQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/disable_next_question"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:clickable="false"
                    android:text="@string/next"
                    android:textColor="@color/white" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnSkipQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/enabled_custom_button"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:text="@string/skip"
                    android:textColor="@color/white" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        />

</RelativeLayout>
