<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/refill_second_question"
                    layout="@layout/doctor_layout" />

                <tk.medlynk.patient.android.CustomViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="\#2"
                    android:textSize="25.0sp" />

                <LinearLayout
                    android:id="@id/patient_row"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/refill_second_question"
                    android:layout_marginTop="40.0dip"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@id/doctor_icon"
                        android:layout_width="100.0dip"
                        android:layout_height="100.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_marginTop="10.0dip"
                        android:src="@drawable/patient_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.medlynk.shahab.myviewselection.ViewSelection
                            android:id="@id/viewSelectionChoicesFirst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:button_type="true"
                            app:number_of_views="4"
                            app:selectable="true"
                            app:selected_background="@drawable/answer_selected"
                            app:selected_text_color="@color/black"
                            app:single_select="true"
                            app:unselected_background="@drawable/answer_not_selected"
                            app:unselected_text_color="@color/white" />

                        <include layout="@layout/refill_second_part_layout"
                            android:id="@+id/refill_second"></include>
                        <com.medlynk.shahab.myviewselection.ViewSelection
                            android:id="@+id/viewSelectionChoicesSecond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:button_type="true"
                            app:number_of_views="1"
                            app:selectable="true"
                            app:selected_background="@drawable/answer_selected"
                            app:selected_text_color="@color/black"
                            app:single_select="true"
                            app:unselected_background="@drawable/answer_not_selected"
                            app:unselected_text_color="@color/white" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layoutDirection="rtl">

                <Button
                    android:id="@id/btnNextQuestion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/disable_next_question"
                    android:text="@string/next"
                    android:textColor="@color/white" />

                <Button
                    android:id="@id/btnSkipQuestion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/enabled_custom_button"
                    android:text="@string/skip"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:id="@id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</RelativeLayout>