<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="tk.medlynk.patient.android.Activity.FollowUpResults.fragments.Question_1.FUpR_1st_Question">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/follow_up_results_first_question"
                layout="@layout/doctor_layout" />

            <tk.medlynk.patient.android.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_symptoms_third_question"
                android:layout_centerHorizontal="true"
                android:text="#1"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/choices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_results_first_question"
                android:layoutDirection="rtl">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/patient_icon" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:id="@+id/viewSelectionFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:button_type="true"
                        app:number_of_views="2"
                        app:selectable="true"
                        app:selected_background="@drawable/answer_selected"
                        app:selected_text_color="@color/black"
                        app:single_select="false"
                        app:unselected_background="@drawable/answer_not_selected"
                        app:unselected_text_color="@color/white" />

                    <Button
                        android:id="@+id/third_choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/answer_not_selected"
                        android:layout_margin="5dp"
                        android:textColor="@color/white"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="ltr"
                        app:layoutManager="GridLayoutManager"
                        app:spanCount="2"
                        android:id="@+id/firstRecyclerView" />

                    <Button
                        android:id="@+id/fourth_choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/answer_not_selected"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="ltr"
                        app:layoutManager="GridLayoutManager"
                        app:spanCount="2"
                        android:id="@+id/secondRecyclerView" />

                    <Button
                        android:id="@+id/fifth_choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/answer_not_selected"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        />


                   <!-- <com.medlynk.shahab.myviewselection.ViewSelection
                        android:id="@+id/viewSelectionSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:button_type="true"
                        app:number_of_views="1"
                        app:selectable="true"
                        app:selected_background="@drawable/answer_selected"
                        app:selected_text_color="@color/black"
                        app:single_select="true"
                        app:unselected_background="@drawable/answer_not_selected"
                        app:unselected_text_color="@color/white" />-->

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choices"
                android:layoutDirection="rtl">

                <Button
                    android:id="@+id/btnNextQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/disable_next_question"
                    android:clickable="false"
                    android:text="@string/next"
                    android:textColor="@color/white" />

                <!--<Button
                    android:id="@+id/btnSkipQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/enabled_custom_button"
                    android:text="@string/skip"
                    android:textColor="@color/white" />-->

            </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>
