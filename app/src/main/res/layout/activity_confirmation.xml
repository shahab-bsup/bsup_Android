<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk.medlynk.patient.android.Activity.Confirmation.ConfirmationActivity">

    <tk.medlynk.patient.android.CustomViews.CustomTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bubble"
        android:gravity="center"
        android:text="You Must Confirm your account!!!"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <tk.medlynk.patient.android.CustomViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Check your Email to continue!"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

</RelativeLayout>