<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/refill_third_question"
                layout="@layout/doctor_layout" />

            <tk.medlynk.patient.android.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/refill_third_question"
                android:layout_centerHorizontal="true"
                android:text="\#3"
                android:textSize="25.0sp" />

            <LinearLayout
                android:id="@id/answer_text_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/refill_third_question"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/paient_icon"
                    android:layout_width="100.0dip"
                    android:layout_height="100.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:src="@drawable/patient_icon" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/refill_third_answer_input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="20.0dip"
                    android:layout_marginTop="30.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/custom_edit_text_doctor_id"
                    android:hint="@string/type_answer_here"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:padding="10.0dip" />
            </LinearLayout>

            <com.medlynk.shahab.myviewselection.ViewSelection xmlns:n2="http://schemas.android.com/apk/res-auto"
                android:id="@id/viewSelectionChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/answer_text_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0dip"
                n2:button_type="true"
                n2:number_of_views="1"
                n2:selectable="true"
                n2:selected_background="@drawable/answer_selected"
                n2:selected_text_color="@color/black"
                n2:single_select="true"
                n2:unselected_background="@drawable/answer_not_selected"
                n2:unselected_text_color="@color/white" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layoutDirection="rtl">

        <Button
            android:id="@id/btnNextQuestion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/disable_next_question"
            android:clickable="false"
            android:text="@string/next"
            android:textColor="@color/white" />

        <Button
            android:id="@id/btnSkipQuestion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/enabled_custom_button"
            android:text="@string/skip"
            android:textColor="@color/white" />
    </LinearLayout>

    <ProgressBar
        android:id="@id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</RelativeLayout>