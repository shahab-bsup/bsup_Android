<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="tk.medlynk.patient.android.Activity.FollowUpResults.fragments.Question_2.FollowUpResults_2nd_Question">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/follow_up_results_second_question"
                layout="@layout/doctor_layout" />

            <tk.medlynk.patient.android.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_results_second_question"
                android:text="#2"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_results_second_question"
                android:id="@+id/choices"
                android:layoutDirection="rtl">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/patient_icon" />

                <com.medlynk.shahab.myviewselection.ViewSelection
                    android:id="@+id/viewSelectionChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:button_type="true"
                    app:number_of_views="2"
                    app:selectable="true"
                    app:selected_background="@drawable/answer_selected"
                    app:selected_text_color="@color/black"
                    app:single_select="true"
                    app:unselected_background="@drawable/answer_not_selected"
                    app:unselected_text_color="@color/white" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layoutDirection="rtl">

        <Button
            android:id="@+id/btnNextQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/disable_next_question"
            android:clickable="false"
            android:text="@string/next"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSkipQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/enabled_custom_button"
            android:text="@string/skip"
            android:textColor="@color/white" />

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        />
</RelativeLayout>
