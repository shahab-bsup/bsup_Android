<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/follow_up_symptoms_twelve_question"
                layout="@layout/doctor_layout"></include>

            <tk.medlynk.patient.android.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_symptoms_twelve_question"
                android:text="#12"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/patient_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_symptoms_twelve_question"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/doctor_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/patient_icon" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:id="@+id/viewSelectionChoices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:button_type="true"
                        app:number_of_views="1"
                        app:selectable="true"
                        app:selected_background="@drawable/answer_selected"
                        app:selected_text_color="@color/black"
                        app:single_select="true"
                        app:unselected_background="@drawable/answer_not_selected"
                        app:unselected_text_color="@color/white" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_medications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/viewSelectionChoices"
                        android:layoutDirection="ltr"
                        app:layoutManager="LinearLayoutManager"></android.support.v7.widget.RecyclerView>

                    <Button
                        android:id="@+id/add_medication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/recycler_view_medications"
                        android:background="@drawable/answer_not_selected"
                        android:padding="5dp"
                        android:text="@string/add_a_medication"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/patient_row"
                android:layoutDirection="rtl">

                <Button
                    android:id="@+id/btnNextQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/disable_next_question"
                    android:clickable="false"
                    android:text="@string/next"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnSkipQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/enabled_custom_button"
                    android:text="@string/skip"
                    android:textColor="@color/white" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>
