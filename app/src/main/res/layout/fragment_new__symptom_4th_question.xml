<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <include
                    android:id="@+id/new_symptom_fourth_question"
                    layout="@layout/doctor_layout" />
                <tk.medlynk.patient.android.CustomViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="#4"
                    android:textSize="25sp"
                    />
                <LinearLayout
                    android:layoutDirection="rtl"
                    android:layout_below="@id/new_symptom_fourth_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/patient_icon"
                        />
                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        app:number_of_views="10"
                        app:selectable="false"
                        app:button_type="true"
                        app:unselectable_background="?selectableItemBackground"
                        app:unselectable_text_color="@color/answer_choices_numbers_color"
                        android:id="@+id/viewSelectionChoiceNumbers" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        />

                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:number_of_views="10"
                        app:single_select="true"
                        app:selectable="true"
                        app:button_type="true"
                        app:unselected_background="@drawable/answer_not_selected"
                        app:selected_background="@drawable/answer_selected"
                        app:unselected_text_color="@color/colorPrimary"
                        app:selected_text_color="@color/white"
                        android:id="@+id/viewSelectionChoices" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnNextQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/disable_next_question"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:text="@string/next"
                    android:textColor="@color/white" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnSkipQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/enabled_custom_button"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:text="@string/skip"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        />

</RelativeLayout>