<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="tk.medlynk.patient.android.Activity.NewSymptom.fragments.New_Symptom_4th_question">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/new_symptom_fourth_question_scroll_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/new_symptom_fourth_question"
                    layout="@layout/doctor_layout" />

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_below="@id/new_symptom_fourth_question"
                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/patient_row">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/patient_icon"
                        android:id="@+id/doctor_icon"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" />

                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        app:button_type="true"
                        app:number_of_views="10"
                        android:id="@+id/answerNumbers"
                        />

                    <view
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/answers_background_color"
                        android:layout_width="2dp"
                        android:layout_height="match_parent" />

                    <com.medlynk.shahab.myviewselection.ViewSelection
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:button_type="true"
                        app:number_of_views="10"
                        android:id="@+id/new_symptom_fourth_answers"
                        />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_symptom_third_question_scroll_area">
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnNextQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/next_button_question"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:text="@string/next"
                    android:textColor="@color/white" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnSkipQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_main"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:text="@string/skip"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
