<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="tk.medlynk.patient.android.Activity.NewSymptom.fragments.Question_14.NS_14th_question">

    <tk.medlynk.patient.android.CustomViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="#14"
        android:textSize="25sp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/new_symptom_fourteen_question"
                    layout="@layout/doctor_layout" />

                <tk.medlynk.patient.android.CustomViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="#14"
                    android:textSize="25sp" />

                <LinearLayout
                    android:id="@+id/patient_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/new_symptom_fourteen_question"
                    android:layout_marginTop="40dp"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/doctor_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/patient_icon"
                        tools:ignore="RtlHardcoded" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.medlynk.shahab.myviewselection.ViewSelection
                            android:id="@+id/viewSelectionChoices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:button_type="true"
                            app:number_of_views="1"
                            app:selectable="true"
                            app:selected_background="@drawable/answer_selected"
                            app:selected_text_color="@color/white"
                            app:single_select="true"
                            app:unselected_background="@drawable/answer_not_selected"
                            app:unselected_text_color="@color/colorPrimary" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_medications"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/viewSelectionChoices"
                            android:layoutDirection="ltr"
                            app:layoutManager="LinearLayoutManager"></android.support.v7.widget.RecyclerView>

                        <tk.medlynk.patient.android.CustomViews.CustomTextView
                            android:id="@+id/add_medication"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/recycler_view_medications"
                            android:background="@drawable/answer_not_selected"
                            android:padding="10dp"
                            android:text="@string/add_a_medication"
                            android:textColor="@color/white" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/patient_row"
                    android:layoutDirection="rtl">

                    <Button
                        android:id="@+id/btnNextQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/disable_next_question"
                        android:text="@string/next"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnSkipQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/enabled_custom_button"
                        android:text="@string/skip"
                        android:textColor="@color/white" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>
