<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    tools:context="tk.medlynk.patient.android.Activity.NewSymptom.fragments.Question_3.NS_3rd_question">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/new_symptom_third_question_scroll_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/new_symptom_third_question"
                    layout="@layout/doctor_layout"></include>

                <tk.medlynk.patient.android.CustomViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="#3"
                    android:textSize="25sp" />

                <LinearLayout
                    android:id="@+id/patient_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/new_symptom_third_question"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/doctor_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/patient_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <CheckBox
                            android:id="@+id/first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Years Ago" />

                        <android.support.v7.widget.AppCompatEditText
                            android:inputType="numberDecimal"
                            android:imeOptions="actionDone"
                            android:id="@+id/years_ago_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edit_text_doctor_id"
                            android:hint="@string/type_answer_here"
                            android:padding="10dp" />

                        <CheckBox
                            android:id="@+id/second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Months Ago" />

                        <android.support.v7.widget.AppCompatEditText
                            android:inputType="numberDecimal"
                            android:imeOptions="actionDone"
                            android:id="@+id/month_ago_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edit_text_doctor_id"
                            android:hint="@string/type_answer_here"
                            android:padding="10dp" />

                        <CheckBox
                            android:id="@+id/third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Weeks Ago" />

                        <android.support.v7.widget.AppCompatEditText
                            android:inputType="numberDecimal"
                            android:imeOptions="actionDone"
                            android:id="@+id/weeks_ago_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edit_text_doctor_id"
                            android:hint="@string/type_answer_here"
                            android:padding="10dp" />

                        <CheckBox
                            android:id="@+id/fourth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Days Ago" />

                        <android.support.v7.widget.AppCompatEditText
                            android:inputType="numberDecimal"
                            android:imeOptions="actionDone"
                            android:id="@+id/days_ago_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edit_text_doctor_id"
                            android:hint="@string/type_answer_here"
                            android:padding="10dp" />

                        <com.medlynk.shahab.myviewselection.ViewSelection
                            android:id="@+id/viewSelectionChoices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:button_type="true"
                            app:number_of_views="2"
                            app:selectable="true"
                            app:selected_background="@drawable/answer_selected"
                            app:selected_text_color="@color/white"
                            app:single_select="true"
                            app:unselected_background="@drawable/answer_not_selected"
                            app:unselected_text_color="@color/colorPrimary" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_symptom_third_question_scroll_area"
                android:layoutDirection="rtl">

                <Button
                    android:id="@+id/btnNextQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/disable_next_question"
                    android:text="@string/next"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnSkipQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/enabled_custom_button"
                    android:text="@string/skip"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>
