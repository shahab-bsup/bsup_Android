<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="tk.medlynk.patient.android.Activity.NewSymptom.fragments.Question_3.New_Symptom_3rd_question">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/new_symptom_third_question_scroll_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include android:id="@+id/new_symptom_third_question"
                    layout="@layout/doctor_layout"></include>
                <tk.medlynk.patient.android.CustomViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/new_symptom_third_question"
                    android:layout_centerHorizontal="true"
                    android:text="#3"
                    android:textSize="25sp"
                    />
                <LinearLayout
                    android:layout_below="@id/new_symptom_third_question"
                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/patient_row">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/patient_icon"
                        android:id="@+id/doctor_icon"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" />
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include android:id="@+id/new_symptom_third_question_years_ago"
                            layout="@layout/new_symptom_third_answer_row"></include>
                        <include android:id="@+id/new_symptom_third_question_months_ago"
                            layout="@layout/new_symptom_third_answer_row"></include>
                        <include android:id="@+id/new_symptom_third_question_weeks_ago"
                            layout="@layout/new_symptom_third_answer_row"></include>
                        <include android:id="@+id/new_symptom_third_question_days_ago"
                            layout="@layout/new_symptom_third_answer_row"></include>

                        <com.medlynk.shahab.myviewselection.ViewSelection
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:number_of_views="2"
                            app:single_select="true"
                            app:selectable="true"
                            app:button_type="true"
                            app:unselected_background="@drawable/answer_not_selected"
                            app:selected_background="@drawable/answer_selected"
                            app:unselected_text_color="@color/white"
                            app:selected_text_color="@color/black"
                            android:id="@+id/viewSelectionChoices" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_symptom_third_question_scroll_area">
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnNextQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/disable_next_question"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:text="@string/next"
                    android:textColor="@color/white" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnSkipQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/enabled_custom_button"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:text="@string/skip"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        />

</RelativeLayout>
