<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/doctor_icon"
        android:id="@+id/doctor_icon"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/question_answer_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_toRightOf="@id/doctor_icon"
        android:layout_alignTop="@id/doctor_icon">

        <com.neweraandroid.demo.CustomViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtQuestion"
            android:text="@string/new_symptom_first_question"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"/>

        <com.neweraandroid.demo.CustomViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtQuestion_see_more"
            android:text="@string/see_more"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>