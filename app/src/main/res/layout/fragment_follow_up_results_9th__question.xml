<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/follow_up_results_ninth_question"
                layout="@layout/doctor_layout" />

            <tk.medlynk.patient.android.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_results_ninth_question"
                android:layout_centerHorizontal="true"
                android:text="#9"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/follow_up_results_ninth_question"
                android:id="@+id/choices"
                android:layoutDirection="rtl">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/patient_icon" />

                <com.medlynk.shahab.myviewselection.ViewSelection
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    app:button_type="true"
                    app:number_of_views="10"
                    app:selectable="false" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/answers_background_color" />

                <com.medlynk.shahab.myviewselection.ViewSelection
                    android:id="@+id/viewSelectionChoices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:button_type="true"
                    app:number_of_views="10"
                    app:selectable="true"
                    app:selected_background="@drawable/answer_selected"
                    app:selected_text_color="@color/black"
                    app:single_select="true"
                    app:unselected_background="@drawable/answer_not_selected"
                    app:unselected_text_color="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choices"
                android:layoutDirection="rtl">

                <Button
                    android:id="@+id/btnNextQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/disable_next_question"
                    android:clickable="false"
                    android:text="@string/next"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnSkipQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/enabled_custom_button"
                    android:text="@string/skip"
                    android:textColor="@color/white" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        />

</RelativeLayout>
