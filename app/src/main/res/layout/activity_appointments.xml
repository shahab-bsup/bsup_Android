<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk.medlynk.patient.android.Activity.Appointments.AppointmentsActivity">

    <include
        android:id="@+id/appointmentsToolbar"
        layout="@layout/toolbar_layout" />

    <tk.medlynk.patient.android.CustomViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_below="@id/appointmentsToolbar"
        android:layout_height="wrap_content"
        android:id="@+id/numOfAppointments"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="You have 3 appointments"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appointmentsRecyclerView"
        android:layout_below="@+id/numOfAppointments"
        />


</RelativeLayout>
