<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_refill_a_medication"
    android:background="@color/white"
    tools:context="tk.medlynk.patient.android.Activity.Start_a_Refill.Start_A_New_RefillActivity">

    <include android:id="@+id/refill_toolbar_layout"
        layout="@layout/toolbar_layout"></include>

    <ImageView
        android:layout_below="@id/refill_toolbar_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/img_refill"
        android:src="@drawable/refill"
        android:scaleType="centerCrop"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        />

    <tk.medlynk.patient.android.CustomViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRefill_note"
        android:layout_below="@id/img_refill"
        android:layout_centerHorizontal="true"
        android:text="@string/refill_notes"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStartRefill"
        android:background="@drawable/enabled_custom_button"
        android:text="@string/refill_button"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/welcome_button_margins_horizontally"
        android:layout_marginLeft="@dimen/welcome_button_margins_horizontally"
        android:layout_marginBottom="35dp"
        android:layout_below="@id/txtRefill_note" />

</RelativeLayout>
